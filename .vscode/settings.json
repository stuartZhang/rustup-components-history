{
    "css.validate": false,
    "debug.inlineValues": true,
    "debug.openExplorerOnEnd": true,
    "debug.allowBreakpointsEverywhere": false,
    // 机器性能高的话，请把这个配置项复制入【用户级】的 vscode 配置文件里。
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": false
    },
    "editor.tabSize": 4,
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": "on",
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
    "editor.wordWrap": "on",
    "editor.detectIndentation": false,
    "eslint.validate": [
        "typescript",
        "javascript"
    ],
    "explorer.autoReveal": true,
    "files.defaultLanguage": "javascript",
    "files.eol": "\n",
    "files.exclude": {
        ".sass-cache": true,
        ".tmp": true,
        "node_modules/.bin": true,
        "src/.dev_dbg": true
    },
    "files.trimTrailingWhitespace": true,
    "gitlens.currentLine.enabled": false,
    "git.ignoreLimitWarning": true,
    "html.validate.scripts": false,
    "javascript.validate.enable": false,
    "prettier.singleQuote": true, // 强制单引号
    "prettier.trailingComma": "all", // 尽可能控制尾随逗号的打印
    "projectManager.groupList": true,
    "projectManager.sortList": "Recent",
    "projectManager.openInNewWindowWhenClickingInStatusBar": true,
    "scss.validate": false,
    "stylelint.configOverrides": {
        "ignoreFiles": [
            "*.js",
            "**/*.js",
            "*.ts",
            "**/*.ts",
            "dist/",
            "node_modules/"
        ]
    },
    "stylelint.enable": true,
    "stylelint.autoFix": true,
    "stylelint.trace.server": "messages",
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.revealIfOpen": true,
    "vetur.format.defaultFormatter.html": "js-beautify-html", // 使用插件格式化 html
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            "wrap_attributes": "force-aligned"
        } // 属性强制折行对齐
    }, // 格式化插件的配置
    "vetur.useWorkspaceDependencies": true, // 请复制此配置项至【用户配置】中。
    "vetur.validation.script": false,
    "vsicons.presets.angular": false
}